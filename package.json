{
  "name": "sounds-of-stfu",
  "version": "0.1.0",
  "description": "Chatsubo Virtual Bar - Spatial Audio Communication Platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "signaling": "node signaling-server.js",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ai": "node src/ai/utils/performance-metrics.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "spatial-audio",
    "webrtc",
    "p2p",
    "ai",
    "transformers",
    "privacy-first",
    "threejs",
    "chatsubo"
  ],
  "author": "Sounds of STFU Team <helpdesk@thisisunsafe.ai>",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.0",
    "peerjs": "^1.5.4",
    "prom-client": "^15.1.3",
    "three": "^0.160.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "vite": "^6.0.3",
    "vitest": "^4.0.16",
    "ws": "^8.18.3"
  }
}
